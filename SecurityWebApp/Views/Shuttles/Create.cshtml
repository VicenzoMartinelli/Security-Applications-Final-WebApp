@using SecurityWebApp.Data.Model;
@using SecurityWebApp.Models.Config;

@model SecurityWebApp.Data.Model.Shuttle

@{
  ViewData["Title"] = "Criar Nave";
}

<h3 class="text-purple text-center">Cadastro do Nave</h3>

<hr />

<div>
  <a asp-action="Index">Voltar</a>
</div>

<hr />
<div class="container p-0">
  <form asp-action="Create" class="form-vertical">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
      <label asp-for="Model" class="control-label"></label>
      <input asp-for="Model" class="form-control" />
      <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Producer" class="control-label"></label>
      <input asp-for="Producer" class="form-control" />
      <span asp-validation-for="Producer" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Value" class="control-label"></label>
      <input asp-for="Value" class="form-control" />
      <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Type" class="control-label"></label>
      @Html.DropDownList("Type",
        Html.GetEnumSelectList<SecurityWebApp.Data.Model.ShuttleType>(),
        "Escolha um tipo", new { @class = "form-control" })
      <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Pilot" class="control-label"></label>
      @Html.DropDownList("PilotId",
        ViewBag.Pilots,
        "Escolha um piloto", new { @class = "form-control" })
      <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
      <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
  </form>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
