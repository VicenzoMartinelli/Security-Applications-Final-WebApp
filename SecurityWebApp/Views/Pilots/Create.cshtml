@using SecurityWebApp.Data.Model;

@model SecurityWebApp.Data.Model.Pilot

@{
  ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pilot</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="BirthDate" class="control-label"></label>
        @*@Html.TextBoxFor(model => model.BirthDate, new { type = "date" })*@
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
      </div>
      <div class="form-group d-block">
        <label asp-for="Genre" class="control-label"></label>
        <div class="d-flex justify-content-lg-around">
          <div class="custom-control custom-radio">
            @Html.RadioButtonFor(x => x.Genre, Genre.Male, new { @class = "custom-control-input", id = "rdbMale" })
            <label class="custom-control-label" for="rdbMale">Masculino</label>
          </div>
          <div class="custom-control custom-radio">
            @Html.RadioButtonFor(x => x.Genre, Genre.Female, new { @class = "custom-control-input", id = "rdbFemale" })
            <label class="custom-control-label" for="rdbFemale">Feminino</label>
          </div>
        </div>

        <span asp-validation-for="Genre" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
