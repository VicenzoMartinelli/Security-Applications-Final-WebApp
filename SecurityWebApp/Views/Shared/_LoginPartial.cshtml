@using Microsoft.AspNetCore.Identity
@using SecurityWebApp.Data.Model

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
  <li class="nav-item">
    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
  </li>
  <li class="nav-item">
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
      <style type="text/css">
        .custom-sair {
          
        }
      </style>
      <button type="submit" 
              style="padding: 8px 18px !important; margin: 0 !important; line-height: normal !important; border-radius: 5rem !important;"
              class="nav-link btn btn-link text-dark"><i class="fas fa-door-open"></i> Sair</button>
    </form>
  </li>
}
else
{
  <li class="nav-item">
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Entrar</a>
  </li>
}